@model List<Escuela.Dominio.Enrollment>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<table id="Mitabla" class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                Id Enrollment
            </th>
            <th>
                Student ID
            </th>
            <th>
                LastName
            </th>
            <th>
                FirstMidName
            </th>
        </tr>

    </thead>
    <tbody>

        @foreach (var iteracion in Model)
        {

            <tr>
                <td>@iteracion.EnrollmentID</td>
                <td>@iteracion.StudentID</td>
                <td>@iteracion.LastName</td>
                <td>@iteracion.FirstMidName</td>

            </tr>
        }
    </tbody>



</table>
